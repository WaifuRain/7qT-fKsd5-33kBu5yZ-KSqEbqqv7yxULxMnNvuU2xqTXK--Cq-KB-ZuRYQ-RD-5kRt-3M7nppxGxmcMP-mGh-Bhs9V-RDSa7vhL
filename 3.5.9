ingredient3Oz = float(input("Ounces of " + str(ingredient3) + ": "))
numservings = int(input("Number of Servings: "))
print("   ")
total1 = (str(ingredient1Oz * numservings))
total2 = (str(ingredient2Oz * numservings))
total3 = (str(ingredient3Oz * numservings))

print("Total ounces of " + str(ingredient1) + ": " + str(total1))
