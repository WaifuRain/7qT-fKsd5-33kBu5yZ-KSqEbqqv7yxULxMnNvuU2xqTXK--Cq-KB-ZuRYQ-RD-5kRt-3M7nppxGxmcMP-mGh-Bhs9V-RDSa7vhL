speed(2)


def make_square(radius):
    color("red")
    forward(radius * 2)
    left(90)
    
def make_circle(radius):
    color("blue")
    penup()
    forward(radius)
    pendown()
    circle(radius)
    
radius_choice = int(input("What would you like the size of the shapes to be?: "))

for i in range(4):
    make_square(radius_choice)
make_circle(radius_choice)
