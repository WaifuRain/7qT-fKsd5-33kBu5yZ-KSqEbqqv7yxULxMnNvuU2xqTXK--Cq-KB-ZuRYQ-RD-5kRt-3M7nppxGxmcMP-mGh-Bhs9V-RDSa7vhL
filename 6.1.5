def rainy():
    print("On a rainy day, galoshes are the appropriate footwear.")
def sunny():
    print("On a sunny day, sandals are the appropriate footwear.")
def snowy():
    print("On a snowy day, boots are the appropriate footwear.")
weather = input("What is the weather? (sunny, rainy, snowy): ")
if (weather == "sunny"):
    sunny()
elif (weather == "rainy"):
    rainy()
elif (weather == "snowy"):
    snowy()
else:
    print("Invalid option.")
