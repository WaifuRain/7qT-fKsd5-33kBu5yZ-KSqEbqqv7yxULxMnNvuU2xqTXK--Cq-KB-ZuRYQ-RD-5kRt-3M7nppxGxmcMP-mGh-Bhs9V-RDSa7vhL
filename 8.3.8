def get_index(current_string):
    index = 0
    while index != -1:
        index = int(input("Enter an index (-1 to quit): "))
        if index == -1:
            return -1
        elif (index > len(current_string) - 1 or index < -1):
            print("Invalid Index")
        else:
            return index
